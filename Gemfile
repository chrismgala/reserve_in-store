source 'https://rubygems.org'

gem 'jquery-rails', '~> 3.1.4' # Use jquery as the JavaScript library
gem 'kaminari', '~> 0.16.1' # Pagination such as `Product.all.page(params[:page])`
gem 'local_time', '~> 1.0.3' # For admin and merchant-facing pretty time.
gem 'pg', '~> 0.20.0' # Use postgresql as the database for Active Record
gem 'puma', '~> 3.7.1' # Our server being using in production and local for multi-threading.
gem 'rails', '4.1.8'
gem 'sass-rails', '~> 4.0.3' # Use SCSS for stylesheets
gem 'uglifier', '>= 1.3.0' # Use Uglifier as compressor for JavaScript assets

group :development do
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring',        group: :development
end

group :test do
  gem 'sqlite3', '~> 1.3' # To quickly create databases
end
