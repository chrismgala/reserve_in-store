<% unless Rails.env.development? %>
try {
    <% end %>
    if (! (window.reserveInStore && window.reserveInStore.version)) {
        if (!window.reserveInStore && window.__reserveInStore) {
            window.reserveInStore = window.__reserveInStore;
        }

        window.reserveInStore = window.__reserveInStore = new ReserveInStore.App({
            pushBuffer: window.reserveInStore || window.__reserveInStore,
            debugMode: <%= Rails.env.development?.to_s %>
        });
    }
    <% unless Rails.env.development? %>
} catch(e) { if (console) console.error(e); }
<% end %>
