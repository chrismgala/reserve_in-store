<div class="page-header text-center mt-5">
  <%= image_tag('vertical_logo.png', class: "vertical-logo") %>
</div>

<div class="admin-forgot-pwd">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-email",
                        required: true, placeholder: "Enter email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-password",
                           required: true, placeholder: "Enter password" %>
    </div>
  
    <div class="form-group row mb-4">
      <% if devise_mapping.rememberable? %>
        <div class="col-md-6">
          <div class="text-left">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>
      <div class="col-md-6 text-right">
        <%= render "admins/shared/links" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn" %>
    </div>
  <% end %>
</div>
