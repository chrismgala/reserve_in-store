<div class="row mb-3">
  <div class="col">
    Showing <%= pluralize(stores.total_count, 'store') %>.
  </div>
</div>

<div class="card">
  <div class="card-body">  
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Store ID</th>
          <th>Name &amp; URL</th>
          <th>Created</th>
          <th>Updated</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% stores.each do |store| %>
          <tr>
            <td>
              <span title="" data-toggle="tooltip">
                <%= store.id %>
              </span>
            </td>
            <td>
              <%= store.name %>
              <a target="<%= store.shopify_domain %>" href="https://<%= store.shopify_domain %>"><i class="fal fa-external-link"></i></a>
            </td>
            <td>
              <span title="<%= store.created_at %>" data-toggle="tooltip">
                <%= local_time_ago(store.created_at) %>
                <%= "<br>(#{time_ago_in_words(store.created_at)} ago)".html_safe if store.created_at < 1.week.ago %>
              </span>
            </td>
            <td>
              <% if store.updated_at.present? %>
                <%= local_time_ago(store.updated_at) %>
                <%= "<br>(#{time_ago_in_words(store.updated_at)} ago)".html_safe %>
              <% else %>
                <i>never</i>
              <% end %>
            </td>
            <td>
              <a href="<%= admin_store_show_path(store) %>" class="btn btn-secondary btn-sm"><i class="far fa-eye"></i></a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= paginate stores %>
  </div>
</div>
