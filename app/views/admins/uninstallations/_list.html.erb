<div class=" table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Store id</th>
        <th>Name</th>
        <th>Domain</th>
        <th>Created</th>
        <th>Updated</th>
      </tr>
    </thead>
    <tbody>
    <% uninstalls.each do |uninstall| %>
      <tr>
        <td><%= uninstall.id %></td>
        <td>
          <%= uninstall.store_id %>
        </td>
        <% uninstall.data.to_h['store'].each do |key, value| %>
          <% if key == "name" %>
            <td><%= value  %></td>
          <% end %>
          <% if key == "shopify_domain"  %>
            <td><a href="https://<%= value  %>" target="_blank"> <%= value  %></a></td>
          <% end %>
        <% end %>
        <td>
          <%= local_time_ago(uninstall.created_at) %>
          <%= "<br>(#{time_ago_in_words(uninstall.created_at)} ago)".html_safe if uninstall.created_at < 1.week.ago %>
        </td>
        <td><%= local_time_ago(uninstall.created_at) %>
          <%= "<br>(#{time_ago_in_words(uninstall.updated_at)} ago)".html_safe if uninstall.updated_at < 1.week.ago %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
