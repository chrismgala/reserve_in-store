<div class="modal" id="reserveinstore-modal">
  <div class="modal-content">
    <%= form_for @reservation, url: {action: "create"}, html: {class: 'form-group', id: 'reservationCreateForm'} do |f| %>
      <div class="modal-header">
        <span class="close" id="reserveinstore-close-modal">&times;</span>
        <h4 class="modal-title"><%= @store.top_msg %>New Reservation</h4>
      </div>
      <div class="modal-body">

        <%= f.label :location %>
        <%= f.select :location_id, @store.locations.collect {|p| [p.name, p.id]}, {include_blank: true}, {class: 'form-control', required: true} %>

        <%= f.label :name %>
        <%= f.text_field :customer_name, class: 'form-control', required: true %>

        <%= f.label :email %>
        <%#= email_field :reservation, :customer_email, required: true %>
        <%= f.text_field :customer_email, class: 'form-control', required: true, 'data-parsley-type': 'email' %>

        <%= f.label :phone %>
        <%= f.text_field :customer_phone, class: 'form-control' %>

        <%= f.label 'Questions/Comments' %>
        <%= f.text_field :comments, class: 'form-control' %>

      </div>

      <div class="modal-footer">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>

