<p>
  Showing <%= pluralize(@reservations.count, 'reservation') %>.
</p>
<table class="table table-responsive table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Location</th>
    <th>Customer Name</th>
    <th>Customer Email</th>
    <th>Customer Phone</th>
    <th>Product</th>
    <th>Variant</th> <%# For testing %>
    <th>Comments</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.id %></td>
      <td><%= reservation.location.name %></td>
      <td><%= reservation.customer_name %></td>
      <td><%= reservation.customer_email %></td>
      <td><%= reservation.customer_phone %></td>
      <td>
        <% if product(reservation.platform_product_id) %>
          <%= product(reservation.platform_product_id).title %>
        <% else %>
          Product not found.
        <% end %>
      </td>
      <td>
        <% if variant(reservation.platform_variant_id) %>
          <%= variant(reservation.platform_variant_id).title %>
        <% else %>
          Variant not found.
        <% end %>
      </td>
      <td><%= reservation.comments %></td>
      <td>
        <% if reservation.fulfilled %>
          Fulfilled
        <% else %>
          <%= form_for :reservation, url: reservation_path(reservation), method: :put do |f| %>
            <%= f.hidden_field :fulfilled, value: true %>
            <%= f.submit 'Fulfill', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Delete', reservation, method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @reservations %>

<!--Edit Modal-->
<div id="edit_reservation_modal">
</div>

<!-- Button trigger modal-->
<button class="btn btn-success btn-xs" data-toggle="modal" data-target="#reservationModal">
  Add New Reservation
</button>

<!-- Modal -->
<div class="modal" id="reservationModal" tabindex="-1" role="dialog" aria-labelledby="reservationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for :reservation, url: {action: "create"}, html: {class: 'form-group', id: 'reservationCreateForm'} do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">New Reservation</h4>
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        </div>
        <div class="modal-body">
          <%= f.label :customer_name %>
          <%= f.text_field :customer_name, class: 'form-control', required: true %>

          <%= f.label :customer_email %>
          <%= f.text_field :customer_email, class: 'form-control', required: true, 'data-parsley-type': 'email' %>

          <%= f.label :customer_phone %>
          <%= f.text_field :customer_phone, class: 'form-control' %>

          <%= f.label :location_id %>
          <%= f.select :location_id, @current_store.locations.collect {|p| [p.name, p.id]}, {include_blank: true}, {class: 'form-control', required: true} %>

          <%= f.label :product_id %>
          <%= f.text_field :platform_product_id, class: 'form-control' %>

          <%= f.label :variant_id %>
          <%= f.text_field :platform_variant_id, class: 'form-control' %>

          <%= f.label :comments %>
          <%= f.text_field :comments, class: 'form-control' %>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!--Parsley form validation-->
<script>
    $('#reservationCreateForm').parsley();
</script>
