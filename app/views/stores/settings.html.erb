<%= form_for @store, url: {action: 'save_settings'}, html: {class: 'form-group'} do |f| %>
  <%= f.label 'Message on top of the window:' %><br>
  <%= f.text_area :top_msg, class: 'form-control' %><br>

  <%= f.label 'Fields to collect:' %><br>
  <%= f.check_box :show_phone %>
  <%= f.label 'Phone' %><br>
  <%= f.check_box :show_comments %>
  <%= f.label 'Comments' %><br>

  <%= f.label 'Success message' %><br>
  <%= f.text_area :success_msg, class: 'form-control' %><br>

  <%= f.label 'Email template' %><br>
  <%= f.text_area :email_template, class: 'form-control' %><br>
  <%= f.submit 'Save', class: 'btn btn-primary'%>
<% end %>

