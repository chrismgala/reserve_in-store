<% if store.needs_subscription? ||
  store.subscription.present? && (store.recommended_feature_plan(local_assigns[:feature]).price > store.subscription.plan.price)
%>
  <div class="Polaris-Layout__Section Polaris-Banner Polaris-Banner--statusWarning Polaris-Banner--withinPage subscription-banner">
    <div class="Polaris-Banner__Ribbon">
      <span class="Polaris-Icon Polaris-Icon--colorYellowDark Polaris-Icon--isColored Polaris-Icon--hasBackdrop">
        <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
          <circle fill="currentColor" cx="10" cy="10" r="9"></circle>
          <path d="M10 0C4.486 0 0 4.486 0 10s4.486 10 10 10 10-4.486 10-10S15.514 0 10 0m0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8m0-13a1 1 0 0 0-1 1v4a1 1 0 1 0 2 0V6a1 1 0 0 0-1-1m0 8a1 1 0 1 0 0 2 1 1 0 0 0 0-2"></path>
        </svg>
      </span>
    </div>
    <div class="Polaris-Banner__ContentWrapper">
      <div class="Polaris-Banner__Heading">
        <div class="Polaris-Heading">
          <% if store.needs_subscription? %>
            You are not subscribed to a plan yet.
          <% else %>
            Upgrade now
          <% end %>
        </div>
      </div>
      <div class="Polaris-Banner__Content">
        <div class="details">This feature is only available in
          <span class="Polaris-TextStyle--variationStrong"><%= store.recommended_feature_plan_code(local_assigns[:feature]) %></span>
          <span class="Polaris-TextStyle--variationStrong">($<%= store.recommended_feature_plan(local_assigns[:feature]).price.to_s.chomp('.00').chomp('.0') %> <sup>/mo</sup>)</span>
           and above
          plans. If you have any questions please contact our support team.</div>

        <div class="Polaris-Banner__Actions">
          <div class="Polaris-ButtonGroup">
            <div class="Polaris-ButtonGroup__Item">
              <div class="Polaris-Banner__PrimaryAction">
                <a href="<%= subscribe_path(plan: store.recommended_feature_plan_code(local_assigns[:feature]), post_subscribe_url: stores_settings_url) %>" class="Polaris-Button Polaris-Button--outline" target="_blank">
                  Upgrade Plan
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
