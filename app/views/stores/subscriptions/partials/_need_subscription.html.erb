<% if store.trial_ends_at > Time.now %>
  <div class="Polaris-Layout__Section Polaris-Banner Polaris-Banner--statusWarning Polaris-Banner--withinPage">
    <div class="Polaris-Banner__Ribbon">
      <span class="Polaris-Icon Polaris-Icon--colorYellowDark Polaris-Icon--isColored Polaris-Icon--hasBackdrop">
        <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
          <circle fill="currentColor" cx="10" cy="10" r="9"></circle>
          <path d="M10 0C4.486 0 0 4.486 0 10s4.486 10 10 10 10-4.486 10-10S15.514 0 10 0m0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8m0-13a1 1 0 0 0-1 1v4a1 1 0 1 0 2 0V6a1 1 0 0 0-1-1m0 8a1 1 0 1 0 0 2 1 1 0 0 0 0-2"></path>
        </svg>
      </span>
    </div>
    <div class="Polaris-Banner__ContentWrapper">
      <div class="Polaris-Banner__Heading">
        <div class="Polaris-Heading">You are not subscribed to a plan yet.</div>
      </div>
      <div class="Polaris-Banner__Content">
         You have <span class="Polaris-TextStyle--variationStrong"><%= time_ago_in_words(store.trial_ends_at) %></span> left of your unlimited-use trial period.
        <div class="Polaris-Banner__Actions">
          <div class="Polaris-ButtonGroup">
            <div class="Polaris-ButtonGroup__Item">
              <div class="Polaris-Banner__PrimaryAction">
                <a href="#" class="Polaris-Button Polaris-Button--outline btn-subscribe">
                  Subscribe Now
                </a>
              </div>
            </div>
          </div>
        </div>
        <p class="subscription-note">
          <span class="Polaris-TextStyle--variationStrong">Note:</span> You'll still get your free trial days if you subscribe now and you won't be billed anything until the trial is over.
        </p>
      </div>
    </div>
  </div>
<% else %>
  <div class="Polaris-Layout__Section Polaris-Banner Polaris-Banner--statusCritical Polaris-Banner--withinPage">
    <div class="Polaris-Banner__Ribbon">
      <span class="Polaris-Icon Polaris-Icon--colorRedDark Polaris-Icon--isColored Polaris-Icon--hasBackdrop">
        <svg viewBox="0 0 20 20" class="Polaris-Icon__Svg" focusable="false" aria-hidden="true">
          <circle fill="currentColor" cx="10" cy="10" r="9"></circle>
          <path d="M10 0C4.486 0 0 4.486 0 10s4.486 10 10 10 10-4.486 10-10S15.514 0 10 0m0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8m0-13a1 1 0 0 0-1 1v4a1 1 0 1 0 2 0V6a1 1 0 0 0-1-1m0 8a1 1 0 1 0 0 2 1 1 0 0 0 0-2"></path>
        </svg>
      </span>
    </div>
    <div class="Polaris-Banner__ContentWrapper">
      <div class="Polaris-Banner__Heading">
        <div class="Polaris-Heading">You are not subscribed to a plan yet.</div>
      </div>
      <div class="Polaris-Banner__Content">
         Trial expired <span class="Polaris-TextStyle--variationStrong"><%= time_ago_in_words(store.trial_ends_at) %></span> ago.
         Please subscribe to a plan by clicking subscribe link to continue. If you have any questions/concerns/comments please contact our support team.

        <div class="Polaris-Banner__Actions">
          <div class="Polaris-ButtonGroup">
            <div class="Polaris-ButtonGroup__Item">
              <div class="Polaris-Banner__PrimaryAction">
                <a href="#" class="Polaris-Button Polaris-Button--outline btn-subscribe" target="_blank">
                  Subscribe Now
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% content_for(:javascript) do %>
  <script>
      var subscriptionRedirect = new SubscriptionRedirect({
          btnSelector: ".btn-subscribe",
          subscriptionPath: "<%= subscribe_path(plan: @current_store.recommended_plan.code, store: @current_store.shopify_domain) %>"
      });
  </script>
<% end %>
